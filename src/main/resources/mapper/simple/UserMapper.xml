<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.basicit.mapper.auth.UserMapper">

    <resultMap id="userMap" type="com.basicit.model.auth.User">
        <result column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="true_name" property="trueName"/>
        <result column="password" property="password"/>
        <result column="salt" property="salt"/>
        <result column="phone_num" property="phoneNum"/>
        <result column="status" property="status"/>
        <result column="organize_id" property="organizeId"/>
        <result column="create_time" property="createTime"/>
        <result column="last_login_time" property="lastLoginTime"/>
        <result column="modify_time" property="modifyTime"/>
        <result column="business" property="business"/>
        <result column="remark" property="remark"/>
    </resultMap>

    <insert id="insert" parameterType="com.basicit.model.auth.User">
        insert into t_sys_user (id, create_time, business, phone_num, last_login_time, modify_time, username, organize_id, `password`, salt, `status`, true_name)
        values (#{id}, #{createTime}, #{business}, #{phoneNum}, #{lastLoginTime}, #{modifyTime}, #{username}, #{organizeId}, #{password}, #{salt}, #{status}, #{trueName})
    </insert>

    <sql id="find_xxx">
	    <![CDATA[
        select u.id,
               u.create_time,
               u.phone_num,
               u.last_login_time,
               u.modify_time,
               u.username,
               u.organize_id,
               u.`password`,
               u.salt,
               u.`status`,
               u.business,
               u.true_name,
               r.remark,
               sc.name
        ]]>
	</sql>

    <sql id="from_xxx">
	    <![CDATA[
        from t_sys_user u join t_sys_user_role ur on u.id = ur.user_id
            join t_sys_role r on r.id = ur.role_id
            join t_sys_user_company uc on u.id = uc.user_id
            join t_sys_company sc on sc.id = uc.company_id
        ]]>
	</sql>

    <sql id="where_xxx">
	    <![CDATA[
        where 1=1
        ]]>
	</sql>

    <select id="findById" parameterType="string" resultMap="userMap">
        <include refid="find_xxx"/>
        <include refid="from_xxx"/>
        <![CDATA[
			where id=#{id}
		]]>nc
    </select>

    <select id="findUserByName" parameterType="string" resultMap="userMap">
        <include refid="find_xxx"/>
        <include refid="from_xxx"/>
        <![CDATA[
			where username=#{username}
		]]>
    </select>

    <select id="findUserByPage" parameterType="string" resultMap="userMap">
        <include refid="find_xxx"/>
        <include refid="from_xxx"/>
        <where>
            <if test="keywords != null and keywords != ''">
                <bind name="pattern" value="'%' + _parameter.keywords + '%'"/>
                title like #{pattern}
            </if>
        </where>
        order by create_time desc
    </select>

    <select id="findUserByShop" parameterType="string" resultMap="userMap">
        <include refid="find_xxx"/>
        <include refid="from_xxx"/>
        <![CDATA[
			where organize_id=#{organizeId}
		]]>
    </select>

    <select id="findUserByRoleCode" parameterType="string" resultMap="userMap">
        select u.id,
               u.create_time,
               u.phone_num,
               u.last_login_time,
               u.modify_time,
               u.username,
               u.organize_id,
               u.`password`,
               u.salt,
               u.`status`,
               u.business,
               u.true_name
        from t_sys_user u,
             t_sys_role r,
             t_sys_user_role ur
        where u.id = ur.user_id
          and r.id = ur.role_id
          and r.code = #{roleCode}
    </select>

    <select id="findEmp" parameterType="string" resultMap="userMap">
        <include refid="find_xxx"/>
        <![CDATA[
			from t_sys_user u , t_sys_user_role ur , t_sys_role r
			where u.id=ur.user_id and ur.role_id=r.id
			and r.code=#{roleCode}
			and u.status=#{status}
		]]>
        <if test="shopId != null">
            and u.organize_id=#{shopId}
        </if>
        <if test="empName != null">
            and u.username like '%'||#{empName}||'%'
        </if>
    </select>

    <select id="findUsers" resultMap="userMap">
        <include refid="find_xxx"/>
        <include refid="from_xxx"/>
    </select>

    <select id="findUserByKeywords" parameterType="string" resultMap="userMap">
        <include refid="find_xxx"/>
        <include refid="from_xxx"/>
        <where>
            <if test="keywords != null and keywords != ''">
                <bind name="pattern" value="'%' + _parameter.keywords + '%'"/>
                title like #{pattern}
            </if>
        </where>
    </select>

    <update id="update" parameterType="com.basicit.model.auth.User">
        update t_sys_user
        <set>
            <if test="username != null">
                username = #{username},
            </if>
            <if test="trueName != null">
                true_name = #{trueName},
            </if>
            <if test="phoneNum != null">
                phone_num = #{phoneNum},
            </if>
            <if test="password != null">
                password = #{password},
            </if>
            <if test="salt != null">
                salt = #{salt},
            </if>
            <if test="business != null">
                business = #{business},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="organizeId != null">
                organize_id = #{organizeId},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="lastLoginTime != null">
                last_login_time = #{lastLoginTime},
            </if>
            <if test="modifyTime != null">
                modify_time = #{modifyTime}
            </if>
        </set>
        where u.id = #{id}
    </update>

    <select id="findAllByFilter" parameterType="Map" resultMap="userMap">
        <include refid="find_xxx"/>
        <include refid="from_xxx"/>
        <include refid="where_xxx"/>
        <if test="start != null and limit != null">
            limit #{start},#{limit}
        </if>
    </select>

    <select id="findAllByFilterCount" parameterType="Map" resultType="int">
        select count(id)
        <include refid="from_xxx"/>
        <include refid="where_xxx"/>
    </select>

    <delete id="delete" parameterType="string">
        delete
        from t_sys_user
        where id = #{id}
    </delete>

</mapper>
